<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9F5E9"
    tools:context=".Register">

    <ImageView
        android:id="@+id/imagePayungi"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/payungi_logo" />

    <EditText
        android:id="@+id/registerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_below="@+id/imagePayungi"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="5dp"/>

    <EditText
        android:id="@+id/registerEmail"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:layout_below="@id/registerName"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="5dp"/>

    <EditText
        android:id="@+id/registerPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@id/registerEmail"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="5dp"/>

    <EditText
        android:id="@+id/registerPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:inputType="phone"
        android:layout_below="@id/registerPassword"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="5dp"/>

    <EditText
        android:id="@+id/registerDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Birth Date"
        android:inputType="text|date"
        android:layout_below="@id/registerPhone"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="5dp"/>

    <Button
        android:id="@+id/registerButton"
        android:background="@drawable/bordered_button_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@id/registerDate"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="5dp"/>


    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have account ? Login Here"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/registerButton"/>

    <ProgressBar
        android:id="@+id/loadRegister"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_below="@id/loginText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>